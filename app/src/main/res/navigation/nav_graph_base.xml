<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main.xml"
    app:startDestination="@id/baseOnBoardingFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="id.anantyan.challengechapter3.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="id.anantyan.challengechapter3.ui.detail.DetailFragment"
        android:label="Alphabet {key}"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="key"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_detailFragment_to_googleFragment"
            app:destination="@id/googleFragment" />
    </fragment>
    <fragment
        android:id="@+id/googleFragment"
        android:name="id.anantyan.challengechapter3.ui.google.GoogleFragment"
        android:label="{word}"
        tools:layout="@layout/fragment_google" >
        <argument
            android:name="word"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/baseOnBoardingFragment"
        android:name="id.anantyan.challengechapter3.ui.onboarding.BaseOnBoardingFragment"
        android:label="fragment_base_on_boarding"
        tools:layout="@layout/fragment_base_on_boarding" >
        <action
            android:id="@+id/action_baseOnBoardingFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph_main.xml"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>